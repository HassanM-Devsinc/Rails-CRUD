<h1>Add New Product</h1>

<%= form_with(model: @product, url: products_path, local: true) do |form| %>
  <div class="field">
    <%= form.label :product_name %>
    <%= form.text_field :product_name, class: 'form-control' %>
  </div>

  <br>

  <div class="field">
    <%= form.label :stock_level %>
    <%= form.number_field :stock_level, class: 'form-control' %>
  </div>

  <br>

  <div class="actions">
    <%= form.submit 'Create Product', class: 'btn btn-primary' %>
  </div>
<% end %>