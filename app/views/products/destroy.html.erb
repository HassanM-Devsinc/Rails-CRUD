<h1>Delete Product</h1>

<%= form_with(url: delete_product_path, method: :delete, local: true) do |form| %>
  <div class="field">
    <%= form.label :product_id %>
    <%= form.text_field :product_id, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :product_name %>
    <%= form.text_field :product_name, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit 'Delete Product', class: 'btn btn-danger' %>
  </div>
<% end %>